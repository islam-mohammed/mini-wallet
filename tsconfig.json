{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["resources/ts/*"]
    },
    "types": ["vite/client"]
  },
  "include": [
    "resources/ts/**/*.ts",
    "resources/ts/**/*.d.ts",
    "resources/ts/**/*.vue"
  ],
  "exclude": ["node_modules"]
}
